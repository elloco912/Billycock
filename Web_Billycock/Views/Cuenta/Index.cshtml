@model IEnumerable<Billycock.Models.Cuenta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.diminutivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.netflix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amazon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.disney)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hbo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.youtube)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.spotify)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idEstado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diminutivo)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.netflix, new { @disabled = "disabled" })
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.amazon, new { @disabled = "disabled" })
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.disney, new { @disabled = "disabled" })
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.hbo, new { @disabled = "disabled" })
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.youtube, new { @disabled = "disabled" })
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.spotify, new { @disabled = "disabled" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idEstado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idCuenta">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idCuenta">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idCuenta">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
